@model List<Tickets>;
@using Microsoft.AspNetCore.Identity;
@using UNeedTickets.Models


@if (User.Identity.IsAuthenticated){
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Existing Tickets
			</h2>
		</div>
		@if (User.IsInRole(SD.Role_QA))
		{
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Ticket
				</a>
			</div>
		}

	</div>


<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>
			ID 
		</th>
		<th>
			Title
		</th>
		<th>Summary</th>
	</tr>
	</thead>
	<tbody>


		
		@foreach(var obj in Model)
		{
			<tr>
				<td>@obj.Id</td>
				<td>@obj.Title</td>
				<td>@obj.Summary</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
						</a>

							@if (User.IsInRole(SD.Role_QA))
							{
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i> Delete
								</a>
							}

					</div>
				</td>
			</tr>
		}
		



	</tbody>
</table>

	</div>

}
else
{
	<h1>
		Click on "LOGIN" to see the tickets
	</h1>

}
