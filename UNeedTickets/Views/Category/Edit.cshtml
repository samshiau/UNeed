				<label asp-for="Summary" class="p-0"></label>
				@if (User.IsInRole(SD.Role_QA))
				{
					<input asp-for="Summary"  type="text" class="form-control" />
				}
				@if (User.IsInRole(SD.Role_RD))
				{
					<input asp-for="Summary" readonly type="text" class="form-control" style="background-color:lightgrey" />
				}

