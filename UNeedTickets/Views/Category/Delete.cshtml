@model Tickets

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Ticket</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Title" class="p-0"></label>
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Id" class="p-0"></label>
			<input asp-for="Id" disabled type="text" class="form-control" />
		</div>

		<div>

			<label asp-for="Priority" class="p-0"></label>
			<select asp-for="Priority" class="form-control">
				<option value="P1: Less than 4hrs">P1: Less than 4hrs</option>
				<option value="P2: 4hrs to 24hrs">P2: 4hrs to 24hrs</option>
				<option value="P3: 24hrs to 3days">P3: 24hrs to 3days</option>
				<option value="P4: 3days to 5days">P4: 3days to 5days</option>
				<option value="P5: More than 5days">P5: More than 5days</option>
			</select>

		</div>



		<div>


			<label asp-for="Severity" class="p-0"></label>
			<select asp-for="Severity" class="form-control">
				<option value="1: Minor">1: Minor</option>
				<option value="2: Major">2: Major</option>
				<option value="3: Critical">3: Critical</option>
			</select>


		</div>



		<div class="mb-3 row p-1">
			<label asp-for="Summary" class="p-0"></label>
			<input asp-for="Summary" disabled type="text" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Description" class="p-0"></label>
			<input asp-for="Description" disabled type="text" class="form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Status" class="p-0"></label>
			<select asp-for="Status" disabled class="form-control">
				<option value="OPEN">OPEN</option>
				<option value="CLOSED">CLOSED</option>
			</select>
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="ResolvedorNot" class="p-0">Resolved or Not</label>
			<select asp-for="ResolvedorNot" disabled class="form-control">
				<option value=true>True</option>
				<option value=false>False</option>
			</select>
		</div>

		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6">
				<a asp-controller="Category" asp-action="Index" class="btn btn-info border form-control">
					Back to List
				</a>
			</div>

		</div>

	</div>

</form>
