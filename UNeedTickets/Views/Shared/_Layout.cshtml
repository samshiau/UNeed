@using UNeedTickets.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UNeedTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UNeedTickets.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-info bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid" style="display: flex; justify-content: center; align-items: center;">
                <div style="display: flex; align-items: center; ">

                    @if (User.IsInRole(SD.Role_Ad))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Category" asp-action="ShowUserAccounts" style="font-size:17px;color:white">Manage User Accounts</a>
                    }
                    
                    <a class="navbar-brand" asp-area="" asp-controller="Category" asp-action="Index" style="font-size: 30px;color:white">UNeedTickets</a>

                
                
                    <partial name="_LoginPartial" />

                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-info text-muted">
        <div class="container" style="color: white; text-align:center">
            &copy; 2023 - UNeedTickets - <a asp-area="" asp-controller="Home" asp-action="AboutUNeed" style="color: white;">About UNeed</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
